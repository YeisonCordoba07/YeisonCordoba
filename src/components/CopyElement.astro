<script is:inline>
  function copyContent() {
    const textElement = document.querySelector("#emailText");
    if (textElement && textElement.textContent) {
      const textToCopy = textElement.textContent;
      navigator.clipboard.writeText(textToCopy).then(
        () => {
          alert("Texto copiado al portapapeles!");
        },
        (err) => {
          console.error("Error al copiar texto: ", err);
        }
      );
    } else {
      console.error("El elemento o su contenido no existen.");
    }
  }


</script>




<div class="copy-element">
  <span class="copy-element__title">

    <span id="emailText"><slot/></span>
    <button class="copy-element__copy-button" onclick="copyContent()">
      <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              width="24"
              height="24"
              fill="none"
      >
        <!-- Documento detrÃ¡s -->
        <rect
                x="4"
                y="7"
                width="14"
                height="16"
                rx="4"
                ry="4"
                fill="#currentColor"
                stroke="currentColor"
                stroke-width="2"
        ></rect>
          <!-- Documento frente -->
        <rect
                x="7"
                y="4"
                width="14"
                height="16"
                rx="3"
                ry="3"
                fill="#ffffff"
                stroke="currentColor"
                stroke-width="2"
        ></rect>
      </svg>
    </button>
  </span>
</div>



<style>
