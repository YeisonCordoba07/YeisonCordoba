<div class="copy-element">
  <span class="copy-element__title">
    
    <slot />

    <span class="info__icons">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        width="24"
        height="24"
        fill="none"
      >
        <!-- Documento detrÃ¡s -->
        <rect
          x="4"
          y="7"
          width="14"
          height="16"
          rx="4"
          ry="4"
          fill="#currentColor"
          stroke="currentColor"
          stroke-width="2"></rect>
        <!-- Documento frente -->
        <rect
          x="7"
          y="4"
          width="14"
          height="16"
          rx="3"
          ry="3"
          fill="#ffffff"
          stroke="currentColor"
          stroke-width="2"></rect>
      </svg>
  </span>

</div>




<style>

  .copy-element__title {
    position: relative;
    display: flex;
    flex-direction: row;
    border: 1px solid black;
    background-color: var(--copy-element-background-color);
    color: var(--copy-element-text-color);
    padding: 10px 70px 10px 20px;
    border-radius: 50px;
    font-family: 'Roboto', serif;
    width: fit-content;
  }

  .info__icons {
    display: flex;
    position: absolute;
    right: -1px;
    top: -7px;
    bottom: -7px;
    padding: 15px;

    border-radius: 50%;
    border: 2px solid black;
    background-color: var(--copy-element-svg-background-color);
    color: var(--copy-element-svg-color);

    justify-content: center;
    align-items: center;
    transition-property: transform, background-color;
    transition-duration: 0.2s;
  }

  .info__icons:hover {
    transform: scale(1.2);
    color: var(--copy-element-svg-color-hover);
  }

  .info__icons:active {
    background-color: lightgray;
  }

</style>
