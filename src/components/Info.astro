<style>

    section {
        display: flex;
        gap: 20px;
        padding: 20px;
        justify-content: center;
        width: 1024px;
        margin: auto;
        height: 516px;
    }


    .profile {
        background-color: #fff1f1;
        width: 60%;
        height: 100%;
        border-radius: 10px;
    }

    .profile__background {
        display: flex;
        flex-direction: column;
        padding: 20px;
        width: 100%;
        height: 100%;
        border-radius: 10px;
        gap: 20px;

        background: linear-gradient(
                75deg,
                rgba(64, 156, 255, 0.25),
                rgba(218, 143, 255, 0.2),
                rgba(255, 105, 97, 0.2),
                rgba(255, 179, 64, 0.3),
                rgba(255, 212, 38, 0.1)
        );
    }

    .profile__title-container {
        display: flex;
        flex-direction: column;
    }

    .profile__title {
        font-weight: 900;
        font-size: 55px;

        font-family: fredoka, nunito, serif;
        margin: 0;
    }

    .profile__subtitle {
        font-family: fredoka, nunito, serif;
        font-size: 30px;
        font-weight: 500;
    }

    .profile__text {
        font-family: nunito, serif;
        overflow: hidden;
        text-overflow: ellipsis;
        width: 80%;
    }

    .profile__button-container {
        display: flex;
        gap: 15px;
        align-items: center;
        flex-wrap: wrap;
    }

    .profile__icons {
        background-color: white;
        border-radius: 50%;
        width: fit-content;
        padding: 6px;
        display: flex;
        justify-content: center;
        align-items: center;
        transition-property: transform, background-color;
        transition-duration: 0.3s;
        color: black;
        cursor: pointer;

    }

    .profile__icons:hover {
        transform: scale(1.17);
        color: white;
        background-color: black;
    }


    .profile-image {
        display: flex;
        width: 40%;
        height: 100%;
        border-radius: 10px;
        background-color: #fff1f1;
    }

    .profile-image > div {
        display: flex;
        width: 100%;
        height: 100%;
        border-radius: 10px;

        background: linear-gradient(
                75deg,
                rgba(64, 156, 255, 0.2),
                rgba(218, 143, 255, 0.2),
                rgba(255, 105, 97, 0.2),
                rgba(255, 179, 64, 0.2),
                rgba(255, 212, 38, 0.2)
        );
        overflow: hidden;
    }

    .profile-image img {
        width: 100%;
        object-fit: cover;
    }


    /* ----------------- Responsive ------------------ */
    @media (max-width: 767px) {

        section {
            flex-direction: column;
            width: 100%;
            height: fit-content;
        }

        .profile {
            width: 100%;
        }

        .profile-image {
            width: 100%;
            height: 300px;
        }

        .profile-image img {
            object-fit: contain;
        }
    }

    @media (min-width: 768px) and (max-width: 1023px) {

        section {
            width: 100%;
        }
    }

    @media (min-width: 1024px) {

    }


</style>