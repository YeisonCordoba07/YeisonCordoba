---
const { tagName, color, background, src } = Astro.props;
---

<div class="tag" style=`background: ${background}`>
  <img src={src} alt="tag icon" />

  <span 
  class="tag__name" 
  style=`background: ${background}; color: ${color}`>

    {tagName}

  </span>

</div>



<style>
  .tag {
    display: flex;
    width: fit-content;
    align-items: center;
    gap: 10px;
    padding: 5px 10px;
    border-radius: 20px;
  }

  .tag__name {
    font-size: 12px;
  }
</style>
