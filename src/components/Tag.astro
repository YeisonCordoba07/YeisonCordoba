---
const {tagName, color, background, src} = Astro.props;
---

<div class="tag" style=`background: ${background}`>
    <img src={src} alt="tag icon"/>

    <span class="tag__name" style=`background: ${background}; color: ${color}`>{tagName}</span>

</div>


<style>
    .tag {
        display: flex;
        justify-content: center;
        width: fit-content;
        align-items: center;
        gap: 10px;
        padding: 5px 10px;
        border-radius: 20px;
        border: 1px solid black;
    }

    .tag__name {
        font-size: 14px;
        font-family: fredoka, nunito, serif;
        font-weight: 500;
    }
</style>
