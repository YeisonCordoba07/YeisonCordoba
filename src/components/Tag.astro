---
const {tagName, color, background} = Astro.props;
---

<div class="tag"  style=`background: ${background}`>
    <slot />
    <span class="tag__name" style=`background: ${background}; color: ${color}`>{tagName}</span>
</div>

<style>
    
    .tag {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 5px 10px;
        border-radius: 20px;
    }

    .tag__name{
        font-size: 12px;
    }

</style>