<div class="info-container">
    <span>
        <svg
                class="info-icon"
                xmlns="http://www.w3.org/2000/svg"
                height="25"
                width="25"
                fill="currentColor"
                viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm1-13h-2v2h2V7zm0 4h-2v6h2v-6z"/>
        </svg>
    </span>


    <div class="tooltip-text">
        <slot/>
    </div>
</div>


<style>

    .info-container {
        position: relative;
        display: inline-block;
        cursor: pointer;
        width: fit-content;
    }

    .info-icon {
        fill: #007bff;
        cursor: pointer;
        transition: transform 0.2s ease-in-out;
        animation: pulse 2s infinite;
        border-radius: 50%;
    }

    @keyframes pulse {
        0% {
            box-shadow: 0 0 0 0 rgba(166, 208, 255, 0.8);
        }
        70% {
            box-shadow: 0 0 0 13px rgba(166, 208, 255, 0);
        }
        100% {
            box-shadow: 0 0 0 0 rgba(166, 208, 255, 0);
        }

    }

    .info-icon:hover {
        transform: scale(1.3);
        animation-play-state: paused;
    }


    .tooltip-text {
        visibility: hidden;
        width: 250px;
        background-color: rgba(0, 0, 0, 0.75);
        backdrop-filter: blur(20px);
        color: #fff;
        text-align: center;
        padding: 15px;
        border-radius: 10px;
        font-family: Fredoka, Nunito, serif;

        position: absolute;
        z-index: 10;
        bottom: 130%; /* Muestra el tooltip arriba del objeto */
        left: 50%;
        transform: translateX(-94%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    /* Flecha del tooltip */
    .tooltip-text::after {
        content: '';
        position: absolute;
        top: 100%; /* Posiciona la flecha en la parte inferior del tooltip */
        left: 50%;
        transform: translateX(1060%);
        border-width: 5px;
        border-style: solid;
        border-color: rgba(0, 0, 0, 0.75) transparent transparent transparent;
    }

    .info-container:hover .tooltip-text {
        visibility: visible;
        opacity: 1;
    }

</style>

